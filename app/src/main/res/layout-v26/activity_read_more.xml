<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarker"
    tools:context=".ReadMoreActivity"
    tools:layout_editor_absoluteY="25dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDarker">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/appbar_padding_top"
            android:layout_marginVertical="@dimen/appbar_padding_top"
            android:background="@color/colorPrimaryDarker"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvReadMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/tvReadMore"
                android:textColor="@color/colorPrimaryDarker"
                android:background="@color/white"
                android:textSize="40sp"
                android:textAlignment="center"/>

            <!--android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:fontFamily="monospace"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" /-->

            <ImageView
                android:id="@+id/ivReadStory"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="5dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/artboard1"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="99dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/etFullStory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                android:background="@color/white"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>